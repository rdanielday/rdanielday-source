<% if (site.posts.length > 0) { %>
  <div class="recent-posts">
    <% site.posts.sort('date', -1).limit(10).each(function(post) { %>
      <div class="post-item">
        <a class="post-item__title" href="<%=config.root + post.path%>"><%=post.title%></a>
        <% if (post.date) { %>
          <time class="post-item__subtitle" datetime="<%=post.date.toJSON()%>">
            <%=date(post.date)%>
          </time>
        <% } %>
      </div>
    <% }); %>
  </div>
<% } %>
